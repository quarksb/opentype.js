{
  "name": "opentype.js",
  "description": "OpenType font parser",
  "author": {
    "name": "Frederik De Bleser",
    "email": "frederik@debleser.be"
  },
  "keywords": [
    "graphics",
    "fonts",
    "font",
    "opentype",
    "otf",
    "ttf",
    "woff",
    "type"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/opentypejs/opentype.js.git"
  },
  "main": "./dist/opentype.js",
  "module": "./dist/opentype.js",
  "types": "./dist/opentype.d.ts",
  "exports": {
    ".": "./dist/opentype.js"
  },
  "scripts": {
    "build": "bun build ./src/opentype.ts --outdir ./dist --target browser --minify --sourcemap",
    "dev": "bun build ./src/opentype.ts --outdir ./dist --target browser --watch",
    "test": "bun test && npm run lint",
    "lint": "eslint src",
    "lint-fix": "eslint src --fix",
    "types": "tsc --emitDeclarationOnly"
  },
  "devDependencies": {
    "bun-types": "^1.3.5",
    "eslint": "^9.10.0",
    "typescript": "^5.9.3"
  },
  "bin": {
    "ot": "./bin/ot"
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "dependencies": {
    "@kuake/tiny-inflate": "2.0.0"
  }
}
